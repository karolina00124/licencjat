{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex pt-2 pr-2 pl-2 mt-2 justify-content-center">
            <div id="login_box" class="d-flex align-items-center">
                <form method="post" style="flex-grow: 1;">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Jesteś zalogowany jako {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{ 'action_log_out'|trans }}</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">{{ 'login_please'|trans }}</h1>
                    <label for="inputEmail">{{ 'user_email'|trans }}</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <label for="inputPassword">{{ 'user_password'|trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required style="margin-bottom: 1.3em;">

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <div class="btn_box"> <button class="btn2" type="submit">
                        {{ 'action_log_in'|trans }}
                    </button></div>
                </form>
            </div>
      </div>
        <div class="d-flex pb-2 pr-2 pl-2 justify-content-center">
            <div id="under_login_box" >
               <div> Nie masz konta?</div>
                <div id="reg_btn"><a id="reg_btn_2" href="{{ url('app_register') }}" ><i class="bi bi-person-plus"></i> Przejdź do rejestracji</a></div>
            </div>

        </div>
    </div>
{% endblock %}
