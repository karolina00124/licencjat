{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex pt-2 pr-2 pl-2 mt-2 justify-content-center">
        <div id="reg_box" class="d-flex">

            <div><h1 class="h3 mb-3 font-weight-normal">{{ 'singin_please'|trans }}</h1></div>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

            <div class="btn_box"> <button class="btn2" type="submit">
                    {{ 'action_sign_in'|trans }}
                </button></div>
    {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
